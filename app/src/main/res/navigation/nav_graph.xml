<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.devux.finflow.main.view.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_addTransactionFragment"
            app:destination="@id/addTransactionFragment" />
    </fragment>
    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.devux.finflow.main.view.analytics.AnalyticsFragment"
        android:label="fragment_analytics"
        tools:layout="@layout/fragment_analytics" />
    <fragment
        android:id="@+id/goalsFragment"
        android:name="com.devux.finflow.main.view.goals.GoalsFragment"
        android:label="fragment_goals"
        tools:layout="@layout/fragment_goals" >
        <action
            android:id="@+id/action_goalsFragment_to_addGoalFragment"
            app:destination="@id/addGoalFragment" />
        <action
            android:id="@+id/action_goalsFragment_to_goalDetailFragment"
            app:destination="@id/goalDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileSettingsFragment"
        android:name="com.devux.finflow.main.view.profile.ProfileSettingsFragment"
        android:label="fragment_profile_settings"
        tools:layout="@layout/fragment_profile_settings" />
    <fragment
        android:id="@+id/addTransactionFragment"
        android:name="com.devux.finflow.main.view.transaction.AddTransactionFragment"
        android:label="AddTransactionFragment"
        tools:layout="@layout/fragment_add_transaction">
        <action
            android:id="@+id/action_addTransactionFragment_to_categoryManagementFragment"
            app:destination="@id/categoryManagementFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryManagementFragment"
        android:name="com.devux.finflow.main.view.category.CategoryManagementFragment"
        android:label="fragment_category_management"
        tools:layout="@layout/fragment_category_management" />
    <fragment
        android:id="@+id/addGoalFragment"
        android:name="com.devux.finflow.main.view.goals.add_goal.AddGoalFragment"
        android:label="AddGoalFragment" />
    <fragment
        android:id="@+id/goalDetailFragment"
        android:name="com.devux.finflow.main.view.goals.detail.GoalDetailFragment"
        android:label="GoalDetailFragment">
        <argument
            android:name="goal"
            app:argType="com.devux.finflow.data.entity.GoalEntity" />
    </fragment>
</navigation>